doctype html
mixin navElement(name, url)
  li
    a(href=url class=`${path == url ? 'active ' : ''}link`)=name

html
  head
    title=title
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    
    nav
      ul
        +navElement('Main page', '/')
        +navElement('Articles', '/topics')
        +navElement('Quiz', '/quiz')
        +navElement('Admin', '/admin')

    block content
